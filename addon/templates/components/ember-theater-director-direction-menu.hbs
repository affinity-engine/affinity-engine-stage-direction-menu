{{#if directable.attrs.text}}
  {{#ember-theater-director-direction-text directable=directable.attrs.text keyboardActivated=keyboardActivated theaterId=theaterId windowId=windowId willResolveExternally=true}}
    <div class="et-text-menu">
      {{ember-theater-director-direction-menu-logic
        directable=directable
        theaterId=theaterId
        windowId=windowId
        choose=(action 'choose')
      }}
    </div>
  {{/ember-theater-director-direction-text}}
{{else}}
  {{ember-theater-director-direction-menu-logic
    directable=directable
    theaterId=theaterId
    windowId=windowId
    choose=(action 'choose')
  }}
{{/if}}
