{{#if isInput}}
  {{ember-theater-director-direction-menu-option-input
    choice=choice
    value=choice.input
    cancelKeys=cancelKeys
    choose=(action 'choose' choice)
    toggleInput=(action 'toggleInput')
  }}
{{else}}
  {{ember-theater-director-direction-menu-option-button
    choice=choice
    iconFamily=iconFamily
    choose=(action 'choose' choice)
    toggleInput=(action 'toggleInput')
  }}
{{/if}}
